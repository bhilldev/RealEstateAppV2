
@model RealEstateApp2.Models.House

@{ ViewBag.Title = "Edit"; }

<div>
    @if (@Model.Street == null)
    {
<h1>Add House</h1> }
            else
            {
<h1>Edit @Model.Street</h1>}

    @using (Html.BeginForm("Edit", "House"))
    {

<div>
    @Html.HiddenFor(m => m.HouseID)
    <div class="form-group">
        <label>Address:</label>
        @Html.TextBoxFor(x => x.Street, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>City:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>State:</label>
        @Html.TextBoxFor(x => x.State, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Zip:</label>
        @Html.TextBoxFor(x => x.Zip, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Price:</label>
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>NumBedrooms:</label>
        @Html.TextBoxFor(x => x.NumBedrooms, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>NumBaths:</label>
        @Html.TextBoxFor(x => x.NumBaths, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Square Feet:</label>
        @Html.TextBoxFor(x => x.SquareFeet, new { @class = "form-control" })
    </div>


    @Html.DropDownList("RealtorID", null, htmlAttributes: new { @class = "form-control" })
</div>
                <div>
                    <br /><br />
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Cancel and return to List", "List", null, new { @class = "btn btn-default" })
                </div>}
</div>
